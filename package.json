{
  "name": "@yadex205/scaffold-firebase-ssr",
  "version": "0.3.2",
  "description": "SSR website scaffold for Firebase",
  "repository": "https://github.com/yadex205/scaffold-firebase-ssr",
  "author": "Kanon Kakuno <yadex205@outlook.jp>",
  "license": "MIT",
  "scripts": {
    "build": "npm run build:app && npm run build:public && npm run build:functions && npm run build:conf && npm run build:install",
    "build:app": "next build ./src/app && cpx \"./src/app/.next/**/*\" ./dist/functions/app",
    "build:public": "cpx \"./src/app/.next/static/**/*\" ./dist/public/_next/static",
    "build:functions": "cpx ./src/functions/index.js ./dist/functions",
    "build:conf": "cpx ./package.json ./dist/functions",
    "build:install": "cd ./dist/functions && npm install",
    "clean": "rimraf ./dist",
    "develop": "node ./src/functions/index.js",
    "emulate": "cross-env NODE_ENV=production firebase serve --only hosting,functions"
  },
  "engines": {
    "node": "8"
  },
  "dependencies": {
    "@zeit/next-preact": "^0.1.0",
    "@zeit/next-sass": "^1.0.1",
    "@zeit/next-typescript": "^1.1.1",
    "firebase-admin": "^6.0.0",
    "firebase-functions": "^2.0.5",
    "next": "^7.0.0",
    "preact": "^8.3.1",
    "preact-compat": "^3.18.4"
  },
  "devDependencies": {
    "babel-plugin-module-resolver": "^3.1.1",
    "cpx": "^1.5.0",
    "cross-env": "^5.2.0",
    "firebase-tools": "^4.2.1",
    "node-sass": "^4.9.3",
    "node-sass-glob-importer": "^5.2.0"
  }
}
